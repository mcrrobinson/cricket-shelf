<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>controller.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>controller.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/api/cart/list</url-pattern>
        <url-pattern>/api/cart/add</url-pattern>
        <url-pattern>/api/order/place</url-pattern>
        <url-pattern>/api/orders/list</url-pattern>
        <url-pattern>/api/orders/product</url-pattern>
        <url-pattern>/api/addresses</url-pattern>
        <url-pattern>/api/address/add</url-pattern>
        <url-pattern>/api/cards</url-pattern>
        <url-pattern>/api/card/add</url-pattern>
        <url-pattern>/api/recently-viewed</url-pattern>
        <url-pattern>/api/recently-added</url-pattern>
        <url-pattern>/api/related-books</url-pattern>
        <url-pattern>/api/logout</url-pattern>
        <url-pattern>/book</url-pattern>
        <url-pattern>/checkout</url-pattern>
        <url-pattern>/search</url-pattern>
        <url-pattern>/basket</url-pattern>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
        <url-pattern>/api/signup</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/WEB-INF/view/*</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
    <resource-ref>
        <description>Connects to database for AffableBean application</description>
        <res-ref-name>jdbc/cricketbooksbean</res-ref-name>
        <res-type>javax.sql.ConnectionPoolDataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <context-param>
        <description>The relative path to images</description>
        <param-name>imagePath</param-name>
        <param-value>img/</param-value>
    </context-param>
</web-app>
